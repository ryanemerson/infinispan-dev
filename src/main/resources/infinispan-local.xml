                    <!--<connection-pool properties-file="empty.properties"/>-->
                    <string-keyed-table drop-on-exit="true" create-on-start="true" prefix="test_table2">
                        <id-column name="id_column" type="VARCHAR(2048)"/>
                        <data-column name="data_column" type="BYTEA"/>
                        <timestamp-column name="timestamp_column" type="BIGINT"/>
                    </string-keyed-table>
                </string-keyed-jdbc-store>
            </persistence>
